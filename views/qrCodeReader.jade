extends layout

block append css

block append headContents

block content

	div(id="center_pane" style="float:left;")

		// video canvas
		canvas(id="canvasForVideo" width="400" height="300" style="float:left;")
		// video canvas
		br
		// result
		div(id='result')
		// result

	div(style="float:left;")
		text 　webカメラからの画像切り抜き速度：
		select(id="changeReadQRCodeIntervalTimeMSec")
			for num, key in ['標準', '高速']
				option(value="#{num}") #{num}
		br

		div(id="center_pane")
			text password
			br
			input(type="password" id="inputArea")

	// sound
	audio(id="sound-file" preload="auto")
		source(src="/music/cursor6.wav")
	// sound
	// video
	video(id="myVideo" style="visibility:hidden" autoplay="1")
	// video


	script.
		var hostAddress = "#{hostAddress}";

block append afterScripts
	script(type='text/javascript', src='/socket.io/socket.io.js')
	script(src="/assets/mscorlib.js")
	script(src="/assets/ZXingQR.js")
	script(src="/javascripts/qrCodeReader/ugly.min.js")
